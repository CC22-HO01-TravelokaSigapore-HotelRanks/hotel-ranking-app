    <style name="TextAppearance.HotelRanking.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.HotelRanking.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.HotelRanking.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.HotelRanking.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="TextAppearance.HotelRanking.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextAppearance.HotelRanking.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
